<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="5dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewResidentPhoto"
            android:layout_width="0dp"
            android:src="@drawable/ic_people_light"
            android:layout_height="match_parent"
            android:layout_weight="0.40" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.60"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewResidentFullName"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="15dp"
                android:textAllCaps="false"
                android:layout_gravity="start"
                android:textStyle="bold"
                android:layout_weight="0.3"
                android:gravity="start" />

            <TextView
                android:id="@+id/textViewResidentDocument"
                android:textSize="12dp"
                android:drawableLeft="@drawable/ic_credit_card_light"
                android:layout_width="match_parent"
                android:drawablePadding="5dp"
                android:layout_height="0dp"
                android:layout_gravity="start"
                android:layout_weight="0.5"
                android:gravity="start" />

            <TextView
                android:id="@+id/textViewResidentPhone"
                android:layout_width="match_parent"
                android:drawableLeft="@drawable/ic_smartphone_light"
                android:layout_height="0dp"
                android:textSize="12dp"
                android:drawablePadding="5dp"
                android:layout_gravity="start"
                android:layout_weight="0.5"
                android:gravity="start" />

            <TextView
                android:id="@+id/textViewResidentManzana"
                android:layout_width="match_parent"
                android:drawableLeft="@drawable/ic_home_light"
                android:layout_height="0dp"
                android:textSize="12dp"
                android:drawablePadding="5dp"
                android:layout_gravity="start"
                android:layout_weight="0.5"
                android:gravity="start" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/buttonDelete"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_gravity="bottom"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="200dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            card_view:srcCompat="@drawable/ic_delete_light"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>